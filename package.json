{
  "name": "hotel-booking",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:security": "yarn audit && yarn audit fix",
    "test:security:check": "yarn audit --audit-level=moderate",
    "test:security:fix": "yarn audit fix",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./project-improvements/performance/lighthouse-report.html",
    "test:lighthouse:ci": "lighthouse http://localhost:3000 --output=json --output-path=./project-improvements/performance/lighthouse-report.json --chrome-flags='--headless'",
    "test:lighthouse:performance": "lighthouse http://localhost:3000 --only-categories=performance --output=html --output-path=./project-improvements/performance/lighthouse-performance.html",
    "test:lighthouse:accessibility": "lighthouse http://localhost:3000 --only-categories=accessibility --output=html --output-path=./project-improvements/performance/lighthouse-accessibility.html",
    "test:lighthouse:best-practices": "lighthouse http://localhost:3000 --only-categories=best-practices --output=html --output-path=./project-improvements/performance/lighthouse-best-practices.html",
    "test:lighthouse:seo": "lighthouse http://localhost:3000 --only-categories=seo --output=html --output-path=./project-improvements/performance/lighthouse-seo.html",
    "test:performance": "npm run test:lighthouse:performance",
    "test:accessibility": "npm run test:lighthouse:accessibility",
    "test:seo": "npm run test:lighthouse:seo",
    "test:headers": "node scripts/check-security-headers.js",
    "test:performance:monitor": "node scripts/performance-monitor.js",
    "test:performance:advanced": "node scripts/performance-monitor-advanced.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@hookform/resolvers": "^5.2.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sanity/vision": "^4.1.1",
    "@stripe/stripe-js": "^7.6.1",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.6.5",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "lucide-react": "^0.536.0",
    "nanoid": "^5.1.5",
    "next": "^15.4.4",
    "next-auth": "^4.24.11",
    "next-sanity": "^10.0.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "postcss": "^8.4.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "sanity": "^4.1.1",
    "sonner": "^2.0.7",
    "stripe": "^18.3.0",
    "styled-components": "^6.1.19",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "webpack": "^5.101.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-datepicker": "^7.0.0",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.25.8",
    "eslint": "^8",
    "eslint-config-next": "15.4.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
